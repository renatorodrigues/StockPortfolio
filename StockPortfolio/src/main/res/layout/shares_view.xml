<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card"
            android:layout_marginBottom="@dimen/activity_vertical_margin">
            <TextView
                android:id="@+id/formal_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/TitleLight"/>

            <TextView
                android:id="@+id/company"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"/>

            <FrameLayout
                android:id="@+id/graph_container"
                android:layout_width="match_parent"
                android:layout_height="150dp">

                <ProgressBar
                    android:id="@+id/progress_bar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:indeterminate="true" />

                <com.echo.holographlibrary.LineGraph
                    android:id="@+id/history_graph"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:visibility="gone" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/quote"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/change"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card"
            android:layout_marginBottom="@dimen/activity_vertical_margin">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Number of shares"
                style="@style/SectionHeaderUnderline"/>


            <TextView
                android:id="@+id/shares_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Value of Shares"
                style="@style/SectionHeaderUnderline"/>


            <TextView
                android:id="@+id/shares_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card">

            <TableRow>
                <TextView
                    android:text="Open"
                    style="@style/LightTableLabel"/>
                <TextView
                    android:id="@+id/open"
                    android:text="1000"
                    style="@style/LightTableCell"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:text="High"
                    style="@style/LightTableLabel"/>
                <TextView
                    android:id="@+id/high"
                    android:text="1000"
                    style="@style/LightTableCell"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:text="Low"
                    style="@style/LightTableLabel"/>
                <TextView
                    android:id="@+id/low"
                    android:text="1000"
                    style="@style/LightTableCell"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:text="Volume"
                    style="@style/LightTableLabel"/>
                <TextView
                    android:id="@+id/volume"
                    android:text="1000"
                    style="@style/LightTableCell"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:text="Avg Vol"
                    style="@style/LightTableLabel"/>
                <TextView
                    android:id="@+id/avg_vol"
                    android:text="1000"
                    style="@style/LightTableCell"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:text="Mkt Cap"
                    style="@style/LightTableLabel"/>
                <TextView
                    android:id="@+id/mkt_cap"
                    android:text="1000"
                    style="@style/LightTableCell"/>
            </TableRow>

        </TableLayout>
    </LinearLayout>
</ScrollView>