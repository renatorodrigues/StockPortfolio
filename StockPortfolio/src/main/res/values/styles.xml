<resources>

    <style name="AppBaseTheme" parent="android:Theme.Light">

    </style>

    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:windowBackground">@color/background_light</item>
    </style>

    <style name="TitleLight" parent="android:Widget.Holo.Light.TextView">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/dark_gray</item>
    </style>

    <style name="LightTableCell" parent="android:Widget.Holo.Light.TextView">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="LightTableLabel" parent="LightTableCell">
        <item name="android:layout_marginRight">20dp</item>
    </style>

    <style name="SectionHeader" parent="android:Widget.Holo.Light.TextView">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="SectionHeaderUnderline" parent="SectionHeader">
        <item name="android:drawableBottom">@drawable/section_header_underline</item>
        <item name="android:drawablePadding">4dp</item>
    </style>

    <style name="BordlessButton" parent="android:Widget.Holo.Light.TextView">
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/holo_blue_light</item>
        <item name="android:drawablePadding">5dp</item>
    </style>

    <style name="FlatButton" parent="@android:style/Widget.Button.Small">
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/flat_button_colors</item>
        <item name="android:background">@drawable/flat_button</item>
    </style>

    <style name="FlatEdit" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/flat_edit</item>
    </style>
</resources>
