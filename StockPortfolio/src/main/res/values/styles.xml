<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="TitleLight" parent="android:Widget.Holo.Light.TextView">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/dark_gray</item>
    </style>

    <style name="LightTableCell" parent="android:Widget.Holo.Light.TextView">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="LightTableLabel" parent="LightTableCell">
        <item name="android:layout_marginRight">20dp</item>
    </style>

    <style name="SectionHeader" parent="android:Widget.Holo.Light.TextView">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/dark_gray</item>
    </style>

    <style name="SectionHeaderUnderline" parent="SectionHeader">
        <item name="android:drawableBottom">@drawable/section_header_underline</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:paddingLeft">4dp</item>
    </style>

</resources>
